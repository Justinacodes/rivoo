generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id @default(uuid())
  email         String          @unique
  name          String?
  password      String
  emailVerified DateTime?       @map("email_verified")
  image         String?
  role          UserRole        @default(USER)
  createdAt     DateTime        @default(now()) @map("created_at")
  updatedAt     DateTime        @updatedAt @map("updated_at")

  accounts       Account[]
  sessions       Session[]
  medicalProfile MedicalProfile?
  facilityUser   FacilityUser?
  incidents      Incident[]

  @@map("users")
}

model Account {
  id                String  @id @default(uuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model MedicalProfile {
  id                    String    @id @default(uuid())
  userId                String    @unique @map("user_id")
  dateOfBirth           DateTime? @map("date_of_birth")
  bloodType             String?   @map("blood_type")
  allergies             String?
  medications           String?
  conditions            String?
  emergencyContactName  String?   @map("emergency_contact_name")
  emergencyContactPhone String?   @map("emergency_contact_phone")
  user                  User      @relation(fields: [userId], references: [id])
  createdAt             DateTime  @default(now()) @map("created_at")
  updatedAt             DateTime  @updatedAt @map("updated_at")

  incidents Incident[]

  @@map("medical_profiles")
}

model Facility {
  id         String   @id @default(uuid())
  name       String
  address    String
  city       String
  state      String
  postalCode String   @map("postal_code")
  country    String   @default("US")
  phone      String
  email      String?
  website    String?
  latitude   Float
  longitude  Float

  facilityUsers FacilityUser[]
  incidents     Incident[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([latitude, longitude])
  @@map("facilities")
}

model FacilityUser {
  id                String     @id @default(uuid())
  facilityId        String     @map("facility_id")
  userId            String     @unique @map("user_id")
  staffId           String     @unique @map("staff_id")
  role              StaffRole  @default(STAFF)
  department        String?
  position          String?
  isActive          Boolean    @default(true) @map("is_active")
  facility          Facility   @relation(fields: [facilityId], references: [id])
  user              User       @relation(fields: [userId], references: [id])
  assignedIncidents Incident[] @relation("AssignedIncidents")
  createdAt         DateTime   @default(now()) @map("created_at")
  updatedAt         DateTime   @updatedAt @map("updated_at")

  @@map("facility_users")
}

model Incident {
  id               String          @id @default(uuid())
  publicId         String          @unique @default(cuid())
  userId           String          @map("user_id")
  facilityId       String?         @map("facility_id")
  assignedToId     String?         @map("assigned_to_id")
  status           IncidentStatus  @default(PENDING)
  priority         Priority        @default(MEDIUM)
  locationLat      Float?          @map("location_lat")
  locationLng      Float?          @map("location_lng")
  address          String?
  description      String?
  notes            String?
  personName       String?         @map("person_name")
  aiAnalysis       Json?           @map("ai_analysis")
  medicalProfileId String?         @map("medical_profile_id")
  medicalProfile   MedicalProfile? @relation(fields: [medicalProfileId], references: [id])
  alertSource      AlertSource     @default(USER)
  acceptedAt       DateTime?       @map("accepted_at")
  resolvedAt       DateTime?       @map("resolved_at")
  user             User            @relation(fields: [userId], references: [id])
  facility         Facility?       @relation(fields: [facilityId], references: [id])
  assignedTo       FacilityUser?   @relation("AssignedIncidents", fields: [assignedToId], references: [id])
  createdAt        DateTime        @default(now()) @map("created_at")
  updatedAt        DateTime        @updatedAt @map("updated_at")

  @@index([userId])
  @@index([facilityId])
  @@index([status])
  @@index([locationLat, locationLng])
  @@map("incidents")
}

enum UserRole {
  USER
  HOSPITAL_STAFF
  ADMIN
}

enum StaffRole {
  STAFF
  DOCTOR
  NURSE
  ADMIN
}

enum IncidentStatus {
  PENDING
  ASSIGNED
  IN_PROGRESS
  RESOLVED
  CANCELLED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum AlertSource {
  USER
  SAMARITAN
}